#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.dirname(__FILE__) + '/../lib')
require 'json'
require 'prawf/parser'

pipe_path = ARGV[0]
`mkfifo #{pipe_path}` unless File.exists?(pipe_path)

parser = Prawf::Parser.new($stdout, $stderr)

File.open pipe_path, 'r+' do |pipe|
  loop do
    parser.parse pipe.gets
  end
end

